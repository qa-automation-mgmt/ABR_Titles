<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ABR Titles Automation Suite" parallel="false" verbose="1">
    
    <!-- Add TestListener for ExtentReports -->
    <listeners>
        <listener class-name="com.abr.titles.listeners.TestListener"/>
    </listeners>
    
    <test name="Full Flow Tests" preserve-order="true">
        <classes>
            <class name="com.abr.titles.base.LoginTest"/>
            <class name="com.abr.titles.base.TitleSearchTest"/>
            <class name="com.abr.titles.base.TitleDetailsTest"/>
            <class name="com.abr.titles.base.TMMDetailsExportTest"/>
        </classes>
    </test>
    
</suite>